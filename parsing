
<pipeline> ::= <commandline> ("|" <commandline>)*
<commandline> ::= <io_rdr>* <command> <arg>* <io_rdr>*
<io_rdr> ::= ("<" | ">" | ">>" | "2>") <word>
<command> ::=  <word> | <quoted_word>
<arg> ::= <word> | <quoted_word>
<quoted_word> ::= "\"" <word>* " "* "\"" | "'" <word>* " "* "'"
<word> ::= [a-z]* [A-Z]* [0-9]* " "*

case :: < 'Makfile test' echo "$HOME | hero" '$HOME | hero' | cat -n > /dev/stdout
< 'Makfile test' echo "$HOME | hero" '$HOME | hero' | cat -n > /dev/stdout


0:
"""
< Makfile
echo \"cat | ls\" 'cat | ls'
> pipewrite
"""

1:
"""
< piperead
cat -n
> /dev/stdout
"""